{
  "manifest_version": 3,
  "name": "MetaPlay Wallet",
  "version": "1.0",
  "description": "Securely manage your crypto with MetaPlay Wallet, your decentralized Web3 wallet extension.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon1.png",
      "32": "icons/icon1.png",
      "48": "icons/icon2.png",
      "128": "icons/icon2.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/Logo.png",
        "icons/hand.gif"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon1.png",
    "32": "icons/icon1.png",
    "48": "icons/icon2.png",
    "128": "icons/icon2.png"
  }
}